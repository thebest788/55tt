<div class="container">
    <h1>ScriptHub</h1>
    <ul class="script-list">
        <li class="script-item">
            <span>Example Script 1</span>
            <div>
                <button class="execute" onclick="executeScript('console.log(\'Hello from Script 1!\');')">Execute</button>
                <button class="copy" onclick="copyScript('console.log(\'Hello from Script 1!\');')">Copy</button>
            </div>
        </li>
        <li class="script-item">
            <span>Example Script 2</span>
            <div>
                <button class="execute" onclick="executeScript('alert(\'This is Script 2!\');')">Execute</button>
                <button class="copy" onclick="copyScript('alert(\'This is Script 2!\');')">Copy</button>
            </div>
        </li>
        <!-- Add more scripts here as needed -->
    </ul>
    <div class="notification" id="notification">Script copied to clipboard!</div>
</div>

<script>
    // Function to execute a script
    function executeScript(script) {
        try {
            // In a real scenario, you'd use the ScriptBlox API here to execute the script
            // This is a simulation where we're using eval() to run the script (Note: eval can be dangerous in production)
            eval(script);
        } catch (error) {
            alert("Error executing script: " + error.message);
        }
    }

    // Function to copy a script to the clipboard
    function copyScript(script) {
        // Create a temporary input element to copy the script
        const tempInput = document.createElement('input');
        document.body.appendChild(tempInput);
        tempInput.value = script;
        tempInput.select();
        document.execCommand('copy');
        document.body.removeChild(tempInput);
        
        // Show notification that the script has been copied
        showNotification('Script copied to clipboard!');
    }

    // Function to show the notification
    function showNotification(message) {
        const notification = document.getElementById('notification');
        notification.innerText = message;
        notification.style.display = 'block';
        
        // Hide the notification after 3 seconds
        setTimeout(() => {
            notification.style.display = 'none';
        }, 3000);
    }
</script>

</body>
